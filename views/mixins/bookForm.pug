mixin bookForm(book, publisher, genre, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='title') Book Title:
                input(id='title' name='title' value= book.title)

            div.form-input
                label(for='publisher') Publisher:
                input(id='publisher' name='publisher' value= book.publisher)

            div.form-input
                label(for='genre') Genre:
                select(id='genre' name='genre')
                    each genre in genres
                        option(value=genre selected = (genre === book.genre)) #{genre}

            div.form-input
                label(for='pagenumbers') Page Numbers:
                select(id='pagenumbers' name='pagenumbers' autocomplete='off')
                    -for(let i =100; i<401; i++)
                        option(value=i select = (pagenumbers === book.pagenumbers)) #{i}

            div.form-input
                label(for='image') Image:
                input(id='image' name='image' value=book.image)

            div.form-input
                label(for='description') Book Description:
                textarea(id='description' name='description' rows=10 cols=80) #{book.description}

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button(type='submit') Save